{
  "name": "dashboard-admin-backend",
  "version": "1.0.0",
  "description": "dashboard-admin-backend",
  "license": "bcc",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "rimraf dist && nest build",
    "start:prod": "node dist/apps/nest-auth/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage",
    "start2": "node index.js",
    "dev": "nodemon"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/microservices": "^7.4.2",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/testing": "^7.4.2",
    "@nestjs/typeorm": "^7.1.0",
    "@nestjs/websockets": "^7.4.2",
    "automapper-ts": "^1.9.0",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "passport": "^0.4.1",
    "passport-ldapauth": "^2.1.4",
    "pg": "^8.3.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.7",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "ts-node": "^8.10.2",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/",
      "<rootDir>/lib/"
    ],
    "moduleNameMapper": {
      "@kroms/auth/(.*)": "<rootDir>/lib/auth/src/$1",
      "@kroms/auth": "<rootDir>/lib/auth/src"
    }
  }
}
